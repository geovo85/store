<%= form_for @tovar do |f| %>
	
	<table>
		<tr>
			<td><%= f.label 'Наименование' %></td>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr>
			<td><%= f.label :article %></td>
			<td><%= f.text_field :article %></td>
		</tr>
		<tr>
			<td><%= f.label :comment %></td>
			<td><%= f.text_area :comment %></td>
		</tr>
		<tr>
			<td><%= f.label :hidden %></td>
			<td><%= f.check_box :hidden %></td>
		</tr>
		<tr>
			<td colspan="2">
				<%= f.submit %>				
			</td>
		</tr>	
	</table>

<% end %>